import pandas as pd
import plotly.express as px
import seaborn as sns
import matplotlib.pyplot as plt

iris = px.data.iris()

petal_width_stats = iris['petal_width'].describe()
print("Statistical Description for 'Petal Width':\n", petal_width_stats)

plt.figure(figsize=(12, 5))
plt.subplot(1, 2, 1)
sns.boxplot(x='petal_width', data=iris)
plt.title('Box Plot of Petal Width')

plt.subplot(1, 2, 2)
sns.kdeplot(iris['petal_width'], fill=True)
plt.title('Dependency Curve of Petal Width')
plt.xlabel('Petal Width')
plt.ylabel('Density')

plt.tight_layout()
plt.show()
